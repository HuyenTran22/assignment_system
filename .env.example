# ============================================
# Assignment Management System - Environment Variables
# ============================================
# Copy this file to .env and update values for your environment
# IMPORTANT: Never commit .env to version control!

# ============================================
# DATABASE CONFIGURATION
# ============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=assignment_management

# ============================================
# JWT AUTHENTICATION
# ============================================
# SECURITY: Change this to a random 32+ character string in production!
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=super-secret-key-change-in-production-min-32-chars-long
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# CORS CONFIGURATION
# ============================================
# Add your domain here for production
CORS_ORIGINS=http://localhost,http://localhost:80,http://your-domain.com

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=20971520

# ============================================
# SMTP EMAIL CONFIGURATION (Optional)
# Required for password reset & notifications
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourdomain.com

# ============================================
# ADMIN USER BOOTSTRAP
# First admin user created automatically on startup
# ============================================
ADMIN_EMAIL=admin@system.com
ADMIN_PASSWORD=Admin@123456

# ============================================
# APPLICATION SETTINGS
# ============================================
# Set to False in production for security
DEBUG=False

# ============================================
# FRONTEND SETTINGS
# ============================================
# Leave empty to use relative URLs (recommended for Docker)
VITE_API_BASE_URL=
